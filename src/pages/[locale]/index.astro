---
import Layout from '../../components/layouts/Layout.astro'
import { RESUME_DATA } from '../../data/resume.data'
import { staticLocalePaths } from '../../data/locales'
import { DICTIONARIES } from '../../data/dictionaries'
import About from '../../components/ui/sections/About.astro'
import WorkExp from '../../components/ui/sections/WorkExp.astro'
import Skills from '../../components/ui/sections/Skills.astro'
import Projects from '../../components/ui/sections/Projects.astro'
import Social from '../../components/ui/sections/Social.astro'

export function getStaticPaths() {
  return staticLocalePaths
}

const DATA = RESUME_DATA[Astro.currentLocale || 'en']
const DICTIONARY = DICTIONARIES[Astro.currentLocale || 'en']
---

<Layout title="Welcome to Astro.">
	<main class="container relative mx-auto scroll-my-12 overflow-auto p-4 print:p-12 md:p-16">
		<section class="mx-auto w-full max-w-2xl space-y-8 print:space-y-4">
			<Social />
			<About />
		  	<WorkExp />
		  	<Skills />
		  	<Projects />
		</section>
	</main>
</Layout>
